# --- Build Stage ---
FROM node:18-alpine AS builder
WORKDIR /app
COPY package*.json ./
RUN npm ci
COPY . .
RUN npm run build

# --- Production Stage ---
FROM node:18-alpine
WORKDIR /app
RUN npm install -g serve
COPY --from=builder /app/dist ./dist
EXPOSE 5173

# Para desenvolvimento (com HMR)
# CMD ["npm", "run", "dev", "--", "--host", "0.0.0.0"]

# Para produção (servindo build)
CMD ["serve", "-s", "dist", "-l", "5173"]